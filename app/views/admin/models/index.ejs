<a href="/admin">
    <button>Go Back</button>
</a>

<h1>Add Model</h1>

<form id="add-model" name="add-model" method="post" action="/admin/models/new">

    <label for="category">Category</label>
    <select name="category">
        <% categories.forEach(function(category){ %>
            <option value="<%= category.id %>"><%= category.name %></option>
        <% }); %>
    </select>

    <br><br>

    <label for="firstname">First Name</label>
    <input class="text" name="firstname" type="text" />

    <br><br>

    <label for="lastname">Last Name</label>
    <input class="text" name="lastname" type="text" />

    <br><br>

    <label for="height">Height (cm)</label>
    <input class="text" name="height" type="text" />

    <br><br>

    <label for="bust">Bust</label>
    <input class="text" name="bust" type="text" />

    <br><br>

    <label for="waist">Waist</label>
    <input class="text" name="waist" type="number" step="0.1" />

    <br><br>

    <label for="hips">Hips</label>
    <input class="text" name="hips" type="number" step="0.1" />

    <br><br>

    <label for="dress">Dress</label>
    <input class="text" name="dress" type="text" />

    <br><br>

    <label for="shoe">Shoe</label>
    <input class="text" name="shoe" type="text" />

    <br><br>

    <label for="hair">Hair</label>
    <input class="text" name="hair" type="text" />

    <br><br>

    <label for="eyes">Eyes</label>
    <input class="text" name="eyes" type="text" />

    <br><br>

    <input class="btn" type="submit" value="Add Model" />
</form>

<p><strong>Available models:</strong></p>
<% if(models.length) { %>
<ul>
    <% models.forEach(function(model){ %>
        <li>
            <%= `${model.first_name} ${model.last_name}` %>
            <a href="/admin/models/<%= model.id %>/edit">
                <button>Edit</button>
            </a>
        </li>
    <% }); %>
</ul>
<% }  else { %>
No models added yet.
<% } %>