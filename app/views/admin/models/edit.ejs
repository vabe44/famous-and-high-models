<html>

<head>
    <meta charset="UTF-8">
    <title>Famous & High Models</title>
    <link rel="stylesheet" type="text/css" href="/css/paper.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/icon.min.css" />
</head>

<body>

    <% include ../../partials/header %>

    <div id="container">

        <div class="pagetitle">
            <h1>Edit Model</h1>
        </div>

        <form id="edit-model" name="edit-model" method="post" action="/admin/models/<%= model.id %>/?_method=PUT">

            <label for="category">Category</label>
            <select name="category">
                <% categories.forEach(function(category){ %>
                    <option <% if(category.id === model.category_id) { %> selected <% } %> value="<%= category.id %>"><%= category.name %></option>
                <% }); %>
            </select>

            <br><br>

            <label for="firstname">First Name</label>
            <input class="text" name="firstname" type="text" value="<%= model.first_name %>" />

            <br><br>

            <label for="lastname">Last Name</label>
            <input class="text" name="lastname" type="text" value="<%= model.last_name %>" />

            <br><br>

            <label for="height">Height (cm)</label>
            <input class="text" name="height" type="text" value="<%= model.height %>" />

            <br><br>

            <label for="bust">Bust</label>
            <input class="text" name="bust" type="text" value="<%= model.bust %>" />

            <br><br>

            <label for="waist">Waist</label>
            <input class="text" name="waist" type="number" step="0.1" value="<%= model.waist %>" />

            <br><br>

            <label for="hips">Hips</label>
            <input class="text" name="hips" type="number" step="0.1" value="<%= model.hips %>" />

            <br><br>

            <label for="dress">Dress</label>
            <input class="text" name="dress" type="text" value="<%= model.dress %>" />

            <br><br>

            <label for="shoe">Shoe</label>
            <input class="text" name="shoe" type="text" value="<%= model.shoe %>" />

            <br><br>

            <label for="hair">Hair</label>
            <input class="text" name="hair" type="text" value="<%= model.hair %>" />

            <br><br>

            <label for="eyes">Eyes</label>
            <input class="text" name="eyes" type="text" value="<%= model.eyes %>" />

            <br><br>

            <button class="btn-block">Update Model</button>
        </form>

        <form class="form-inline" id="delete-form" action="/admin/models/<%= model.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>

    </div>

</body>

</html>