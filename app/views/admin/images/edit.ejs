<html>

<head>
    <meta charset="UTF-8">
    <title>Famous & High Models</title>
    <link rel="stylesheet" type="text/css" href="/css/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/paper.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/icon.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script type="text/javascript" src="/js/jquery-2.2.4.min.js"></script>
    <script type="text/javascript" src="/js/semantic.min.js"></script>
</head>

<body>

    <% include ../../partials/header %>

    <div id="container">

        <div class="pagetitle">
            <h1>Edit Image</h1>
        </div>

        <form id="edit-model-image" name="edit-model-image" method="post" action="/admin/images/<%= image.id %>/?_method=PUT">
            <label for="imagelink">Link</label>
            <input class="text" name="imagelink" value="<%= image.link %>" placeholder="Link to image" type="text" required />

            <br>

            <label for="imagetitle">Title</label>
            <input class="text" name="imagetitle" value="<%= image.title %>" placeholder="Title of image (optional)" type="text" />

            <br>

            <label for="imagetype">Type</label>
            <select name="imagetype">
                <option value="portfolio" <% if(image.type === "portfolio") { %> selected <% } %>>Portfolio</option>
                <option value="poloroid" <% if(image.type === "poloroid") { %> selected <% } %>>Poloroid</option>
            </select>

            <br>

            <label for="modelId">Model</label>
            <select name="modelId">
                <option value="">N/A</option>
                <% models.forEach(function(model){ %>
                    <option <% if(model.id === image.model_id) { %> selected <% } %> value="<%= model.id %>"><%= `${model.first_name} ${model.last_name}` %></option>
                <% }); %>
            </select>

            <br>

            <button class="btn-block">Update</button>
        </form>

        <form class="form-inline" id="delete-form" action="/admin/images/<%= image.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>

    </div>

    <script>
        $('.ui.dropdown').dropdown();
    </script>

</body>

</html>